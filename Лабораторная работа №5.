lst = [1, 2, 3, 4, 5]
print("Исходный список:", lst)
print("Обратный порядок:", lst[::-1])

def list_sort(lst):
    return sorted(lst, key=abs, reverse=True)

numbers = [3, -7, 2, -10, 5]
print("Список:", numbers)
print("Сортировка по убыванию абсолютного значения:", list_sort(numbers))

def change(lst):
    if len(lst) >= 2:
        lst[0], lst[-1] = lst[-1], lst[0]
    return lst

items = [10, 20, 30, 40]
print("До замены:", items)
print("После замены:", change(items))
